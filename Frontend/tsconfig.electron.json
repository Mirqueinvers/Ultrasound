{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist-electron",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": false
  },
  "include": ["electron/**/*"],
  "exclude": ["node_modules", "dist-electron", "src", "dist"]
}
